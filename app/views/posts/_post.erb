<div class="post">
   
    <h4><%= user.username %></h4>
    <p><%= post.content %></p>

    <% if post.user == current_user %>
        <a href="/posts/<%= post.id %>/edit">Edit</a>
        <form action="/posts/ <%= post.id %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value=delete>
        </form>
    <% end %>

</div>